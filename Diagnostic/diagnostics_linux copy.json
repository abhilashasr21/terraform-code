{
  "storageAccountName": "${storage_account_name}",
  "ladCfg": {
    "diagnosticMonitorConfiguration": {
      "DiagnosticInfrastructureLogs": {
        "scheduledTransferLogLevelFilter": "Error",
        "scheduledTransferPeriod": "PT1M"
      },
      "metrics": {
        "resourceId": "${resource_id}",
        "metricAggregation": [
          {
            "scheduledTransferPeriod": "PT1H"
          },
          {
            "scheduledTransferPeriod": "PT1M"
          }
        ]
      },
      "performanceCounters": {
        "performanceCounterConfiguration": [
          {
            "counterSpecifier": "/builtin/cpu/usage",
            "sampleRate": "PT60S"
          },
          {
            "counterSpecifier": "/builtin/memory/used",
            "sampleRate": "PT60S"
          },
          {
            "counterSpecifier": "/builtin/memory/available",
            "sampleRate": "PT60S"
          },
          {
            "counterSpecifier": "/builtin/memory/percentavailable",
            "sampleRate": "PT60S"
          },
          {
            "counterSpecifier": "/builtin/disk/used",
            "sampleRate": "PT60S"
          },
          {
            "counterSpecifier": "/builtin/disk/usedpercent",
            "sampleRate": "PT60S"
          },
          {
            "counterSpecifier": "/builtin/disk/readbytespersecond",
            "sampleRate": "PT60S"
          },
          {
            "counterSpecifier": "/builtin/disk/writebytespersecond",
            "sampleRate": "PT60S"
          },
          {
            "counterSpecifier": "/builtin/network/totalbytestransmitted",
            "sampleRate": "PT60S"
          },
          {
            "counterSpecifier": "/builtin/network/totalbytesreceived",
            "sampleRate": "PT60S"
          }
        ]
      },
      "syslogEvents": {
        "syslogEventConfiguration": {
          "LOG_AUTH": "LOG_WARNING",
          "LOG_AUTHPRIV": "LOG_WARNING",
          "LOG_CRON": "LOG_WARNING",
          "LOG_DAEMON": "LOG_WARNING",
          "LOG_KERN": "LOG_WARNING",
          "LOG_LOCAL0": "LOG_WARNING",
          "LOG_LOCAL1": "LOG_WARNING",
          "LOG_LOCAL2": "LOG_WARNING",
          "LOG_LOCAL3": "LOG_WARNING",
          "LOG_LOCAL4": "LOG_WARNING",
          "LOG_LOCAL5": "LOG_WARNING",
          "LOG_LOCAL6": "LOG_WARNING",
          "LOG_LOCAL7": "LOG_WARNING",
          "LOG_LPR": "LOG_WARNING",
          "LOG_MAIL": "LOG_WARNING",
          "LOG_NEWS": "LOG_WARNING",
          "LOG_SYSLOG": "LOG_WARNING",
          "LOG_USER": "LOG_WARNING",
          "LOG_UUCP": "LOG_WARNING"
        }
      },
      "overallQuotaInMB": 5120
    }
  }
}
